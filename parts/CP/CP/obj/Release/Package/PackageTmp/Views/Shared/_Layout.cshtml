<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Colombo Parts</title>
    @Styles.Render("~/Content/css")
  

</head>
<body>
    <div class="container-fluid wrapper">
        <div class="row">
            <div class="col-md-12 hidden-xs store-top">

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-3" style="padding-right:0px;">
                <div class="col-xs-12 col-md-12 logo-box">
                    <img src="/images/logo.png" class="logo" />
                </div>
                <div class="col-xs-12 col-md-12 bg-1 search-box">
                    <div><h3><b>Search</b> Parts</h3></div>
                    <form role="form">
                        <div class="form-group-sm">
                            <input type="email" class="form-control input-sm" id="searchText" placeholder="Search text">
                        </div>
                        <div class="form-group-sm">
                            <label for="exampleInputEmail1" class="label-sm">Brand</label>
                            <select class="form-control input-sm"></select>
                        </div>
                        <div class="form-group-sm">
                            <label for="exampleInputEmail1" class="label-sm">Models</label>
                            <select class="form-control input-sm"></select>
                        </div>
                        <div class="form-group-sm">
                            <label for="exampleInputEmail1" class="label-sm">Category</label>
                            <select class="form-control input-sm"></select>
                        </div>
                        <div class="form-group-sm">

                            <label for="exampleInputEmail1" class="label-sm">Year</label>
                            <div class="form-group row">
                                <div class="col-xs-4 col-md-4">
                                    <select class="form-control input-sm"></select>
                                </div>
                                <div class="col-xs-4 col-md-4">
                                    <select class="form-control input-sm"></select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group-sm">
                            <label for="exampleInputEmail1" class="label-sm">Location</label>
                            <select class="form-control input-sm"></select>
                        </div>
                        <div class="form-group-sm">
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
                    </form>
                </div>
                <div class="col-xs-12 col-md-12 link-box">

                </div>
            </div>

            <div class="col-xs-12 col-md-9">
                <div class="row">
                    <div class="col-xs-12 col-md-12 bg-left-top">

                    </div>

                    @RenderBody()
                    <div class="row">
                        <div class="col-xs-12 col-md-6"></div>
                        <div class="col-xs-12 col-md-6"></div>
                        <div class="col-xs-12 col-md-6"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-9">
                        About
                    </div>
                    <div class="col-xs-12 col-md-3">
                        Adds
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 footer-1">

                <div class="col-xs-12 col-md-4">
                    <h6>INFORMATION</h6>
                    <ul class="nav footer-link">
                        <li>CONTACT US</li>
                    </ul>
                </div>
                <div class="col-xs-12 col-md-4">
                    <h6>CONTACT US</h6>
                    <ul class="nav footer-link">
                        <li>No. 32 DE SILVA ROAD, KALUBOWILA, DEHIWALA</li>
                        <li>077-6077028</li>
                    </ul>
                </div>
                <div class="col-xs-12 col-md-4"></div>

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 footer-2">
            </div>
        </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        
    </div>
 
</body>
</html>
