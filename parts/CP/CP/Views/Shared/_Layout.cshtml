<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
  

</head>
<body>
    <div class="container-fluid">
        <div class="col-md-12 hidden-xs store-top">Admin Section</div>
        <div class="col-xs-12 col-md-3">
            <div class="col-xs-12 col-md-12">
            <img src="/images/logo.png" />
                </div>
            <div class="col-xs-12 col-md-12 bg-1 search-box">
                <div><h3><b>Search</b> Parts</h3></div>
                <form role="form">
                    <div class="form-group-sm">
                        <input type="email" class="form-control input-sm" id="searchText" placeholder="Search text">
                    </div>
                    <div class="form-group-sm">
                        <label for="exampleInputEmail1" class="label-sm">Brand</label>
                        <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group-sm">
                        <label for="exampleInputEmail1" class="label-sm">Models</label>
                        <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group-sm">
                        <label for="exampleInputEmail1" class="label-sm">Category</label>
                        <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group-sm form-inline">

                        <label for="exampleInputEmail1" class="label-sm">Year</label>
                        <div class="form-group row">
                            <div class="col-xs-4 col-md-4">
                                <input style="display:inline" type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="Year">
                            </div>
                            <div class="col-xs-4 col-md-4">
                                <input style="display:inline" type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="To">
                            </div>
                            </div>
                        </div>
                  
                        <div class="form-group-sm">
                            <label for="exampleInputEmail1" class="label-sm">Location</label>
                            <input type="email" class="form-control input-sm" id="exampleInputEmail1" placeholder="Enter email">
                        </div>
                        <div class="form-group-sm">
                            <button type="submit" class="btn btn-default">Search</button>
                        </div>
</form>
            </div>
            <div class="col-xs-12 col-md-12">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#">Profile</a></li>
                    <li><a href="#">Messages</a></li>
                </ul>
                </div>
            </div>
        <div class="col-xs-12 col-md-9">
           @RenderBody()
        </div>
        <div class="col-xs-12 col-md-12 footer-1">
            
                <p>Footer</p>
                
        </div>
        <div class="col-xs-12 col-md-12 footer-2">
        </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
 
</body>
</html>
