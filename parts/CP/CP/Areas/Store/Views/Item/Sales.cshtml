@{
    ViewBag.Title = "Sales";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Sales
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Parts</li>
        <li class="active">Sales</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class='row'>
        <div class='col-md-12'>
            <div class='box box-info'>
                <div class='box-header'>
                    <h3 class='box-title'>
                        Invoices <small></small>

                    </h3>
                </div>
                <div class='box-body pad'>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group">
                                <label>Date range:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="sales-range">
                                </div><!-- /.input group -->
                            </div>
                        </div>
                        <div class="col-md-1 col-md-offset-5" style="margin-top:25px">
                            <button type="button" class="btn btn-primary" onclick="search()">Search</button>

                        </div>
                    </div>
                    <div class="row margin-top5" style="margin-bottom:20px">
                        <div class="col-md-12">
                            <table data-height="400" id="search-table" data-pagination="true" data-side-pagination="server" data-click-to-select="true">
                                <thead>
                                    <tr>
                                        <th data-checkbox="true"></th>
                                        <th data-halign="center" data-field="Id" data-align="center" data-width="150">Invoice #</th>
                                        <th data-halign="center" data-field="Created" data-align="center" data-width="150">Date</th>
                                        <th data-halign="center" data-field="Total">Total</th>
                                        
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript" src="~/Scripts/screens/sales.find.js"></script>
