@{
    ViewBag.Title = "Sales";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Sales
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Parts</li>
        <li class="active">Sales</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class='row'>
        <div class='col-md-12'>
            <div class='box box-info'>
                <div class='box-header'>
                    <h3 class='box-title'>
                        Invoices <small></small>

                    </h3>
                </div>
                <div class='box-body pad'>
                    <div class="row">
                        <div class="col-md-6 col-xs-12">
                            <div class="form-group-sm">
                                <label>Date range</label>
                                <div class="input-group input-group-sm">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control" id="sales-range">
                                </div><!-- /.input group -->
                            </div>

                        </div>
                        <div class="col-md-2">
                            <div class="form-group-sm">
                                <label>Invoice #</label>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control text-right" name="invoice-no" id="invoice-no">
                                </div><!-- /.input group -->
                            </div>
                        </div>
                        <div class="col-md-1" style="margin-top:25px">
                            <button type="button" class="btn btn-primary" onclick="search()">Search</button>

                        </div>
                    </div>
                    <div class="row margin-top5" style="margin-bottom:20px">
                        <div class="col-md-12">
                            <table data-height="400" id="search-table" data-pagination="true" data-side-pagination="server" data-click-to-select="true">
                                <thead>
                                    <tr>
                                        <th class="col-md-3" data-halign="center" data-field="Id" data-align="center">Invoice #</th>
                                        <th class="col-md-3" data-halign="center" data-field="Created" data-align="center" data-formatter="dateFormatter">Date</th>
                                        <th class="col-md-3 text-right" data-halign="center" data-field="Total" data-formatter="totalFormatter">Total (Rs.)</th>
                                        <th class="col-md-1" data-halign="center" data-field="Id" data-formatter="operateFormatter" data-events="salesEvents">Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="view-invoice-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" id="basket-edit-form">
                <div class='box box-info rm-box-shadow'>
                    <div class='box-header'>
                        <h3 class='box-title invoice-no'><small>Invoice</small></h3>
                    </div>
                    <div class='box-body pad'>

                        <div class="row">
                            <div class="col-md-4 text-bold">Date</div>
                            <div class="col-md-8 date text-bold"></div>
                        </div>
                        <div class="row margin-top10">
                            <div class="col-md-4 text-bold">Total (Rs.)</div>
                            <div class="col-md-8 total text-bold"></div>
                        </div>

                        <div class="row margin-top10">
                            <div class="col-md-12">
                                <table id="invoice-table" data-toggle="table">
                                    <thead>
                                        <tr>
                                            <th class="col-md-2 text-center" data-halign="center" data-field="PartNo">Part #</th>
                                            <th class="col-md-6" data-halign="center" data-field="Name">Name</th>
                                            <th class="col-md-2 text-right" data-halign="center" data-field="Qty">Qty</th>
                                            <th class="col-md-2 text-right" data-halign="center" data-field="UnitPrice" data-formatter="totalFormatter">Unit Price (Rs.)</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>

                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript" src="~/Scripts/screens/sales.find.js"></script>
