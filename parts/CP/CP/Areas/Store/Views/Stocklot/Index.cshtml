@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Stocklots
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Stocklots</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class='row'>
        <div class='col-md-12'>
            <div class='box box-info'>
                <div class='box-header'>
                    <h3 class='box-title'>Manage Stocklots <small>Manage information of your stocklots</small></h3>
                    <div class="pull-right box-tools">
                        <button class="btn btn-success btn" title="Add new stocklot" data-toggle="modal" data-target="#add-stocklot-modal">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class='box-body pad'>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="stocklot-table" data-toggle="table" data-url="/api/stocklots">
                                <thead>
                                    <tr>
                                        <th class="col-md-2 text-center" data-halign="center" data-field="Name">Stocklot</th>
                                        <th class="col-md-2 text-center" data-halign="center" data-field="Value">Stock Val</th>
                                        <th class="col-md-6" data-halign="center" data-field="Description">Description</th>
                                        <th class="col-md-2 text-right" data-halign="center">Progress</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="add-stocklot-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" id="stocklot-edit-form">
                <div class='box box-info rm-box-shadow'>
                    <div class='box-header'>
                        <h3 class='box-title'>Stocklot Info <small>Add new stocklot</small></h3>
                    </div>
                    <div class='box-body pad'>

                        <div class="form-group-sm">
                            <label class="label-sm">Name</label>
                            <input type="text" name="Name" id="Name" class="form-control" />
                        </div>
                        <div class="form-group-sm">
                            <label class=" label-sm">
                            Description</label>
                            <textarea name="Description" id="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group-sm">
                            <label class="label-sm">Stock  Value</label>
                            <div class="input-group">
                                <span class="input-group-addon">Rs.</span>
                                <input style="width:150px" type="text" name="Value" id="Value" class="form-control" />
                            </div>

                        </div>
                        <div class="form-group-sm">
                            <label class="label-sm">Date</label>

                            <input type="text" style="width:190px" name="Date" id="Date" class="form-control" data-provide="datepicker" data-date-format="dd/mm/yyyy" />

                        </div>
                        
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript" src="~/Scripts/screens/stocklot.find.js"></script>