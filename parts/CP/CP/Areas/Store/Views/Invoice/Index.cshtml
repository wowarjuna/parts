@model CP.Data.Models.Invoice
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Invoice

    </h1>
    <ol class="breadcrumb">
        <li><a href="/Store/Dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Invoice</li>
    </ol>
</section>
<!-- Main content -->
<section class="content invoice">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <h2 class="page-header">
                <i class="fa fa-globe"></i> CP
                <small class="pull-right">Date: @Html.Raw((Model.Created != null) ? ((DateTime)Model.Created).ToString("dd/MM/yyyy") : "") </small>
            </h2>
        </div><!-- /.col -->
    </div>
    <div class="row invoice-info">
        <div class="col-sm-4 invoice-col">
            <b>Invoice #@Model.Id.ToString().PadLeft(5,'0')</b><br />
            <br />
           
        </div><!-- /.col -->
    </div><!-- /.row -->
    <div class="row margin-top15">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">Qty</th>
                        <th class="col-md-3">Name</th>
                        <th class="col-md-2">Part #</th>
                        <th class="col-md-4">Description</th>
                        <th class="col-md-1">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CP.Data.Models.Sale item in Model.Items)
                    {
                        <tr>
                            <td>@item.Qty</td>
                            <td>@item.Item.Name</td>
                            <td>@item.Item.PartNo</td>
                            <td>@item.Item.Description</td>
                            <td>Rs. @(item.Qty * item.UnitPrice)</td>
                        </tr>
                       
                    }
                    
                </tbody>
            </table>
        </div><!-- /.col -->
    </div><!-- /.row -->
    <div class="row margin-top15">
       
        <div class="col-xs-6 col-md-offset-6">
            <p class="lead">Amount</p>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th class="col-md-8">Total:</th>
                        <td class="col-md-4">Rs. @Model.Total</td>
                    </tr>
                </table>
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
