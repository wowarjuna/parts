@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Baskets

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>Baskets</li>

    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row message-area">
        <div class="col-md-12">
            <div class="alert alert-dismissable">
                <i class="fa"></i>
                <p>Info</p>
            </div>

        </div>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <div class='box box-info'>
                <div class='box-header'>
                    <h3 class='box-title'>Manage Baskets <small>Manage store baskets</small></h3>
                    <div class="pull-right box-tools">
                        <button class="btn btn-success" title="Add new basket" data-toggle="modal" data-target="#add-basket-modal">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class='box-body pad'>
                    <div class="row margin-top5" style="margin-bottom:60px">
                        <div class="col-md-12">
                            <table id="basket-table" data-url="/api/baskets/1" data-height="400" data-sort-name="name" data-sort-order="desc" data-toggle="table" data-card-view="true">
                                <thead>
                                    <tr>
                                        <th data-field="Name">Name</th>
                                        <th data-field="Description">Description</th>
                                        <th data-field="Id" data-formatter="urlFormatter"></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<div class="modal fade" id="add-basket-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" id="basket-edit-form">
                <div class='box box-info rm-box-shadow'>
                    <div class='box-header'>
                        <h3 class='box-title'>Basket Info <small>Add new basket</small></h3>
                    </div>
                    <div class='box-body pad'>

                        <div class="input-group-sm">
                            <label class="label-sm">Name</label>
                            <input type="text" name="Name" id="Name" class="form-control" />
                        </div>
                        <div class="input-group-sm">
                            <label class="label-sm">Description</label>
                            <textarea name="Description" id="Description" class="form-control"></textarea>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script type="text/javascript" src="~/Scripts/screens/basket.find.js"></script>
<script>
    function urlFormatter(value, row) {
        return "<a class='margin-right10' href='#'><i class='fa fa-edit'></i></a><a class='margin-right10' href='#'><i class='fa fa-trash-o'></i></a>";
    }
</script>
