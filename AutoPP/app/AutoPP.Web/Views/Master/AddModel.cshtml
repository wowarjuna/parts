@model AutoPP.Core.Model
<script type="text/javascript">
   
</script>
<div id="content-title">
    <span class="title-text">Add Model</span>
</div>
<form method="post" action="/Master/AddModel">
<table cellpadding="0" cellspacing="0" style="padding: 10px" class="form-content" width="100%" >
    <tr>
        <td style="width:200px">
            @Html.LabelFor(m => m.Name)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </td>
    </tr>
    <tr>
        <td>
             @Html.LabelFor(m => m.Make)
        </td>
        <td>
            @Html.DropDownList("Make", new SelectList(ViewBag.Makes, "Id", "Name"))
        </td>
    </tr>
    <tr>
        <td>
           @Html.LabelFor(m => m.Year)
        </td>
        <td>
             @Html.TextBoxFor(m => m.Year)
            
        </td>
    </tr>
    <tr>
        <td>
           @Html.LabelFor(m => m.YearTo)
        </td>
        <td>
             @Html.TextBoxFor(m => m.YearTo)
            
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.ModelNo)
        </td>
        <td>
            @Html.TextBoxFor(m => m.ModelNo)
            
        </td>
    </tr>
     <tr>
        <td>
        </td>
        <td>
            <input type="submit" value="" class="btn-submit" />
        </td>
    </tr>
</table>
</form>
