<script type="text/javascript">
    var RequestFilter = {
        OnMakeChanged: null,
        onMakeChanged: function (args) {
            if (this.OnMakeChanged != null) {
                this.OnMakeChanged();
            }
        }
    }
    
    
</script>
<fieldset>
    <label>
        Make</label>
    <select class="makes" onchange="RequestFilter.onMakeChanged(this)">
        <option value="0">- all -</option>
        @foreach (var _make in ViewBag.Makes)
        {
            <option value="@_make.Id">@_make.Name</option>
        }
    </select>
</fieldset>
