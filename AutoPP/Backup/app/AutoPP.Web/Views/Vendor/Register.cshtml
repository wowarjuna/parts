@model AutoPP.Core.Vendor
<div id="content-title">
    <span class="title-text">Registration</span>
</div>
<form method="post" action="/Vendor/Register">
<table cellpadding="0" cellspacing="0" style="padding: 10px" class="form-content"
    width="100%">
    <tr>
        <td style="width: 220px">
            @Html.LabelFor(m => m.Name)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Email)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Phone)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Phone)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Mobile)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Mobile)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Fax)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Fax)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Address)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Address)
            @Html.ValidationMessageFor(m => m.Address)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.City)
        </td>
        <td>
            @Html.TextBoxFor(m => m.City)
            @Html.ValidationMessageFor(m => m.City)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.PostalCode)
        </td>
        <td>
            @Html.TextBoxFor(m => m.PostalCode)
        </td>
    </tr>
    <tr>
        <td>
            <label>
                Country</label>
        </td>
        <td>
            <select name="country" id="country">
                <option value="Sri Lanka">Sri Lanka</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>
        </td>
        <td>
            <input type="submit" value=" " class="btn-register" />
        </td>
    </tr>
</table>
</form>
