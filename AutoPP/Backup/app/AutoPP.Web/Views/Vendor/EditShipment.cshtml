@model AutoPP.Core.Shipment
<script type="text/javascript">
    $(function () {
        $("#ShipmentDate").datepicker();

    });
</script>
<div id="content-title">
    <span class="title-text">Approve - @Model.ShipmentDate.ToString("MM/dd/yyyy")</span>
</div>
<form method="post" action="/Vendor/EditShipment">
@Html.HiddenFor(m => m.Id)
<table cellpadding="0" cellspacing="0" style="padding: 10px" class="form-content"
    width="100%">
    <tr>
        <td>
            @Html.LabelFor(m => m.ShipmentDate)
        </td>
        <td>
            @Html.TextBox("ShipmentDate", Model.ShipmentDate.ToString("MM/dd/yyyy"))
            @Html.ValidationMessageFor(m => m.ShipmentDate)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Description)
        </td>
        <td>
            @Html.TextArea("Description", Model.Description, 15, 70, null)
            @Html.ValidationMessageFor(m => m.Description)
        </td>
    </tr>
    <tr>
        <td>
        </td>
        <td>
            <input type="submit" value="" class="btn-submit" />
        </td>
    </tr>
</table>
</form>
